{
    "name": "Brief",
    "version": "2",
    "author": "Denis Lisov",
    "homepage_url": "https://github.com/Flo3-1/brief",
    "manifest_version": 3,
    "default_locale": "en",
	"permissions": ["bookmarks","contextMenus",
        "storage", "unlimitedStorage", "downloads", "tabs", "notifications",
        "webRequest", "declarativeNetRequest"],
	"host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js",
		"type": "module"
    },
    "action": {
        "default_title": "Brief",
		"browser_style": true,
        "default_icon": "icons/brief-icon-64.png",
        "default_popup": "/ui/subscribe/subscribe.html"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+D"
            }
        }
    },
    "options_ui": {
        "page": "/ui/options/options.html",
        "open_in_tab": true
    }
}
